# Database (PostgreSQL for production, SQLite for local dev)
# For SQLite (local dev):
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql://user:password@host:5432/reminder_db?sslmode=require"

# JWT Secret - generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (Gmail example)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="ReminderApp <your-email@gmail.com>"

# Web Push VAPID Keys - generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_EMAIL="mailto:your-email@gmail.com"

# Google Calendar OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://your-vercel-url/api/auth/google/callback"

# Cron Secret (to protect cron endpoint)
CRON_SECRET="your-cron-secret-key"
